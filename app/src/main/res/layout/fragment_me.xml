<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MeFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3782C5">

        <Button
            android:id="@+id/login"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/login_btn"
            android:button="@null"/>
        <ImageView
            android:id="@+id/coupon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_sail"
            android:layout_below="@id/login"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"></ImageView>
        <ImageView
            android:id="@+id/discount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_yh"
            android:layout_below="@id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"></ImageView>
        <ImageView
            android:id="@+id/cart"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_go"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/login"
            android:layout_marginRight="40dp"></ImageView>

        <TextView
            android:id="@+id/coupon_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/coupon"
            android:layout_alignParentLeft="true"
            android:text="优惠券"/>
        <TextView
            android:id="@+id/discount_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/discount"
            android:text="折扣券"/>
        <TextView
            android:id="@+id/cart_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/cart"
            android:layout_alignParentRight="true"
            android:text="购物车"/>

    </RelativeLayout>
    <ListView
        android:id="@+id/menu_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>


</LinearLayout>